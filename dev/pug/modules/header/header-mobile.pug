mixin mainSubnavLink(link,text)
    li.catalog-nav__item
        a(href=link).catalog-nav__link
            span.catalog-nav__text=text
            +icon('chevron-right', 'catalog-nav__icon')

mixin informNavLink(link,text)
    li.inform-nav__item
        a(href=link).inform-nav__link= text

.header__mobile
    .container
        .mobile-menu
            .mobile-menu__toggle
                .mobile-menu__sandwich.sandwich
                    .sandwich__line.sandwich__line--top
                    .sandwich__line.sandwich__line--middle
                    .sandwich__line.sandwich__line--bottom
                span.mobile-menu__title Каталог товаров
            .mobile-menu__content
                .mobile-menu__header
                    span.mobile-menu__title Меню
                    .mobile-menu__close
                        +icon('close', 'mobile-menu__close-icon')
                .mobile-menu__body
                    nav.catalog-nav
                        ul.catalog-nav__list
                            each text in ['Самокаты', 'Беговелы','Велосипеды','Ролики','Скейты','Батуты','аксессуары и запчасти','Зимний спорт','Настольные игры']
                                +mainSubnavLink('#',text)
                    nav.inform-nav.inform-nav--col
                        ul.inform-nav__list
                            +informNavLink('','О компании')
                            +informNavLink('','Доставка и оплата')
                            +informNavLink('','Акции')
                            +informNavLink('','Оптовикам')
                            +informNavLink('','Новости')
                            +informNavLink('','Гарантии')
                            +informNavLink('','Контакты')
                .mobile-menu__footer
                    .mobile-menu__phone
                        a(href="tel:84951203034").mobile-menu__phone-number 8(495) 120-30-34
                        a(href="").mobile-menu__phone-link Заказать звонок
                    .mobile-menu__phone
                        a(href="tel:88007077518").mobile-menu__phone-number 8(800) 707-75-18
                        span.mobile-menu__phone-text Звонок бесплатный
        if(pageClass === "index-page")
            .mobile__logo.logo
                img(src="static/images/general/logo.svg" alt="Logotip")
                .logo__img
        else
            a(href="index.html").mobile__logo.logo
                img(src="static/images/general/logo.svg" alt="Logotip")
                .logo__img
        .search
            form.search__form
                .search__input-wrapper
                    input(placeholder="Я хочу купить.....").search__input
                    .search__clear
                        +icon('close', 'search__clear-icon')
                input(type="submit" value="Naiti").search__btn
        nav.mobile-user-nav
            ul.mobile-user-nav__list
                li.mobile-user-nav__item
                    a(href="").mobile-user-nav__link
                        +icon('search','mobile-user-nav__icon')
                li.mobile-user-nav__item
                    a(href="").mobile-user-nav__link
                        +icon('user','mobile-user-nav__icon')
                li.mobile-user-nav__item
                    a(href="").mobile-user-nav__link
                        +icon('basket','mobile-user-nav__icon')
                            
